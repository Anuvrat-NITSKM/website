<div id="resources" class="container">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        {% for repo in repos %}
            <div class="col">
                <a href="{{repo.name | slug}}" class="no-decoration">
                    <div class="card bg-primary text-secondary shadow-sm">
                        <div class="card-header">{{repo.name | reformatRepoName}}</div>
                        {# Image will be replaced with a thumbnail representing the repo #}
                        <img src="https://images.unsplash.com/photo-1541344822555-97aef3abcd04?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=751&q=80" class="card-img-top" alt="Some image">
                        <div class="card-body">
                            <p class="card-text">{{repo.description}}</p>
                        </div>
                    </div>
                </a>
            </div>
        {% endfor %}
    </div>
</div>
