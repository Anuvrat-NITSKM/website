<div id="activities" class="container mt-5">
    <div class="heading">Activities</div>
    <div class="row justify-content-around">
        {% for activity in activities %}
            <div class="activity-card col col-12 col-md-6 col-lg-4" >
                <div class="inner-activity" onclick="return true" style="background-image: url({{activity.image}})">
                    <div class="info">
                        <h1>{{activity.name}}</h1>
                        <p>{{activity.description}}</p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    <div class="py-3">
        Check Our <a href="/blog">Blog</a>
    </div>
</div>
