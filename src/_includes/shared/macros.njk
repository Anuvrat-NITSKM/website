{# Contains common html structure functions to reuse in templates #}
{% macro downArrow(href) %}
    <div class="d-flex justify-content-center">
        <a class="arrow-btn no-decoration smoothscroll" href="{{href}}">
            <div class="arrow"></div>
        </a>
    </div>
{% endmacro %}


{% macro repoCard(repo) %}
   <div class="col">
        <a href="{{repo.html_url | url}}" class="no-decoration" target="_blank">
            <div class="card h-100 item bg-primary text-secondary shadow-sm justify-content-around hover-shadow repoCard">
                <div class="box"
                    style="background-image:url(https://github.com/{{gh.ORG_NAME}}/{{repo.name}}/raw/{{gh.DEFAULT_BRANCH}}/thumbnail.jpg)">
                    <div class="cover d-flex align-items-center justify-content-center">
                        <div>{{repo.description}}</div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="text-center h5 d-flex align-items-center justify-content-center" style="min-height: 50px;">
                        {{repo.name | reformatRepoName}}</div>
                </div>
            </div>
        </a>
    </div>
{% endmacro %}
