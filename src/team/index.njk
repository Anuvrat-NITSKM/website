<style>

  .intro {
    width: 90%;
    border: 2px solid black;
    margin: 0 auto 50px;
    background-color: rgb(255,255,255);
    position: relative;
    bottom: 15px;
    padding: 15px;
    font-family: 'Times New Roman', Times, serif;
  }
  .dash {
    width: 70px;
    height: 1.5px;
    margin: 5px;
    background-color: rgb(0, 150, 250);
  }

</style>

{% macro Card(photo, Name, role, fb, ig, linkedin, email) %}
    <div class="col-12 col-md-6 col-lg-4">
        <div class="mx-auto px-auto">
            <div class="img-fluid border border-2"><img src="{{photo}}" alt="" style="width:100%"></div>
            <div class="intro">
                <div class="text-dark h5">{{Name}}</div>
                <div class="dash text-center"></div>
                <div class="d-flex justify-content-between text-dark">
                    <span>{{role}}</span>
                    <div class="social-links no-decoration">
                        {% if email %}
                        <a href="mailto:{{email}}" target="_blank" class="no-decoration mx-1">
                            <i class="fa fa-envelope"></i>
                        </a>
                        {% endif %}
                        {% if fb %}
                        <a href="{{fb}}" target="_blank" class="no-decoration mx-1">
                            <i class="fa fa-facebook"></i>
                        </a>
                        {% endif %}
                        {% if ig %}
                        <a href="{{ig}}" target="_blank" class="no-decoration mx-1">
                            <i class="fa fa-instagram"></i>
                        </a>
                        {% endif %}
                        {% if linkedin %}
                        <a href="{{linkedin}}" target="_blank" class="no-decoration mx-1">
                            <i class="fa fa-linkedin"></i>
                        </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endmacro %}

