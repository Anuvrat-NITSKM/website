<style>
  

  .contained {
    /* background-color: blue; */
    width: 25vw;
    height: 70vh;
    margin: 50px;

  }

  .image {
    border: 2px solid white;
    background-position: center;
    background-size: cover;
    height: 80%;
    width: 100%;
  }

  .intro {
    width: 90%;
     border: 2px solid black;
    margin: 0 auto 50px;
    background-color: rgb(255,255,255);
    position: relative;
    bottom: 0px;
    padding: 15px;
    font-family: 'Times New Roman', Times, serif;
  }
  .dash {
    text-align: center;
    width: 70px;
    height: 1.5px;
    margin: 5px;
    background-color: rgb(0, 150, 250);
  }

  .social {
    font-size: 10px;
    display: flex;
    justify-content: space-between;
    color: rgb(99, 99, 99);
  }

  .social_link img {
    width: 25px;
    height: 25px;
  }

  h2 {
    font-size: 1.2rem;
    color: #000000;
  }

  span {
    font-size: 15px;
  }
  .headline{
   
    margin:auto;
    font-size:40px;
    font-weight: 600;
  }
</style>

{% macro Card(photo, Name, role, fb, ig, linkedin) %}
    <div class="contained mx-auto px-auto">
        <div class="image"><img src="{{photo}}" alt="" style="width:100%"></div>
        <div class="intro">
            <h2 style=color:"black">{{Name}}</h2>
            <div class="dash"></div>
            <div class="social">
                <span>{{role}}</span>
                <div class="social_link">
                    {% if fb %}
                     <a href="{{fb}}" target="_blank">
                        <i class="fa fa-facebook fa-2x mx-2"></i>
                    </a>
                    {% endif %}
                    {% if ig %}
                      <a href="{{ig}}" target="_blank">
                        <i class="fa fa-instagram fa-2x mx-2"></i>
                    </a>
                    {% endif %}
                    {% if linkedin %}
                      <a href="{{linkedin}}" target="_blank">
                        <i class="fa fa-linkedin fa-2x mx-2"></i>
                    </a>
                    {% endif %}                                                         
                </div>
            </div>
        </div>
    </div>
{% endmacro %}

