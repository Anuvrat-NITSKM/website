<div id="teams">
<div class="container" class="mb-5">
    <div class="heading">Our Team</div>
    <div class="row justify-content-around">
        {% for team in teams %}
            <div class="row p-0 my-2 border border-primary" style="min-height: 350px">
                <div class="p-3 col-md-12 col-lg-6 {{ 'order-lg-1 order-2' if loop.index%2 else 'order-lg-2 order-1' }}">
                    <div>
                        <h3>{{ team.name }}</h3>
                        <div class="lead">
                            {{ team.description | safe }}</div>
                    </div>
                </div>
                <div class="p-0 col-md-12 col-lg-6 {{ 'order-lg-2 order-1' if loop.index%2 }}">
                    <img src="{{ team.image }}" class="img-fluid team-image"></div>
                </div>
            {% endfor %}
        </div>
        {# <div class="mt-5 text-center lead fw-normal">
            Know More About Our Upcoming Events And Activities From Our
            <a href="{{ meta.linkedin }}" target="_blank">LinkedIn</a>
            Page
        </div> #}
    </div>
</div>
